# API
API_HOST=127.0.0.1
API_PORT=3000

#API_ENV=aws
API_ENV=local
API_URL_LOCAL=http://127.0.0.1:3000/api/
API_URL_AWS=http://<ec2>/api/

### Database (Postgres) Localhost
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=botgrid
DB_USER=postgres
DB_PASS=postgres
DB_SSL=false

# Fees are per-side (open OR close). Example: 0.000384 = 0.0384% per side
FEE_RATE_MAKER_PER_SIDE=0.000384
FEE_RATE_TAKER_PER_SIDE=0.000672

# Since we run local, we ping healthchecks, if script stops for any reason you got notified in the email
# you can create a free account on healthchecks.io and place your ping url below, and set interval as 60000
HEALTHCHECKS_PING_URL=https://hc-ping.com/<id>
HEALTHCHECKS_PING_INTERVAL_MS=0

# Wallet Address (your EVM wallet conected to Hyperliquid
WALLET_ADDRESS=
# Secret Key (api secret key created on Hyperliquid)
PRIVATE_KEY=

# Orders tracked around current price (normal loop)
GRID_ORDERS_WINDOW_DEFAULT=70
# Wider tracking window during cleanup cycles (safer)
GRID_ORDERS_WINDOW_CLEANUP=100


# Telegram
TELEGRAM_BOT_TOKEN=xxx
TELEGRAM_CHAT_ID=xxx

# Bot timezone (optional)
BOT_TZ=America/Edmonton

HYPERLIQUID_TESTNET=0
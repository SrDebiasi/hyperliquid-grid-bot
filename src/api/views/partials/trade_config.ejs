<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h5 m-0">Grid Config</h2>

    <% if (config) { %>
        <button
                type="button"
                class="btn btn-primary btn-sm"
                data-bs-toggle="modal"
                data-bs-target="#configModal"
        >
            Edit config
        </button>
    <% } %>
</div>

<% if (!instance) { %>
    <div class="alert alert-warning mb-0">No instance loaded.</div>
<% } else if (!config) { %>
    <div class="alert alert-warning mb-0">
        No trade_config found for instance <%= instance.id %>.
    </div>
<% } else { %>
    <dl class="row mb-0">
        <dt class="col-4 col-md-2 text-muted">Spot pair</dt>
        <dd class="col-8 col-md-4"><%= config.pair ?? '-' %></dd>

        <dt class="col-4 col-md-2 text-muted">Target profit</dt>
        <dd class="col-8 col-md-4"><%= config.target_percent ?? '-' %>%</dd>

        <dt class="col-4 col-md-2 text-muted">Entry price</dt>
        <dd class="col-8 col-md-4"><%= config.entry_price ?? '-' %></dd>

        <dt class="col-4 col-md-2 text-muted">Exit price</dt>
        <dd class="col-8 col-md-4"><%= config.exit_price ?? '-' %></dd>

        <dt class="col-4 col-md-2 text-muted">Grid distance</dt>
        <dd class="col-8 col-md-4"><%= config.margin_percent ?? '-' %>%</dd>

        <dt class="col-4 col-md-2 text-muted">USD per level</dt>
        <dd class="col-8 col-md-4"><%= config.usd_transaction ?? '-' %>$</dd>

        <dt class="col-4 col-md-2 text-muted">Exec min</dt>
        <dd class="col-8 col-md-4"><%= config.execution_price_min ?? '-' %></dd>

        <dt class="col-4 col-md-2 text-muted">Exec max</dt>
        <dd class="col-8 col-md-4"><%= config.execution_price_max ?? '-' %></dd>
    </dl>
<% } %>
